@model Vidly1.ViewModel.CustomerMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Customers)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                @Html.ActionLink(item.Name,"Detail","Customer",new { Id = item.Id,Name=item.Name },null)</td>
            </tr>
        }

    </tbody>
</table>